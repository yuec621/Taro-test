/* pages/news/news.wxss */
.news-container{
    background-color: #f1f1f1;
}
.news-container swiper{
    width: 100%;
    height: 350rpx;
}

.news-container swiper image{
    width: 100%;
   
}

/*
文章的样式
*/

.artclelist{
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    margin-bottom: 40rpx;
    background-color: #fff;
    border-top: 1px solid #ededed;
    border-bottom: 1px solid #ededed;
    padding: 10px;
    padding-bottom: 5px;

}

.author-time{
    margin-top: 10rpx;
    margin-bottom: 20rpx;
}

.author-icon{
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle;
}

.author-name{
    margin-left: 20rpx;   
}
.author-date{
    margin-left: 20rpx;
    vertical-align: middle;
    margin-bottom: 5px;
    font-size: 26rpx;
}
.title{
    font-size: 34rpx;
    font-weight: 700;
    color: #333;
    margin-bottom: 10px;

}
.artcle-img{
    margin-left: 16px;
    width: 100%;
    height: 340rpx;
    margin: 0 auto;
    margin-bottom: 15rpx;
}
.artcle-text{
    color: #666;
    font-size: 26rpx;
    margin-bottom: 20rpx;
    letter-spacing: 2rpx;
    line-height: 40rpx;
}
.artcle-like{
    font-size: 13rpx;
    flex-direction: row;
    line-height: 16px;

}

.artcle-like-icon{
    height: 16px;
    width: 16px;
    margin-right: 8px;
    vertical-align: middle;
}

.artcle-like-text{
    vertical-align: middle;
    margin-right: 20rpx;
}